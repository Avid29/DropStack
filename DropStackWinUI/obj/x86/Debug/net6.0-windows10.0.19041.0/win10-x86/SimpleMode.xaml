<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx x:ConnectionId='1'
    Title="DropStack"
    x:Class="DropStackWinUI.SimpleMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropStackWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:winex="using:WinUIEx" IsMinimizable="False" IsMaximizable="False" IsShownInSwitchers="False" Width="400" Height="700" IsTitleBarVisible="False" IsResizable="False" IsAlwaysOnTop="True">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>


    <Grid x:ConnectionId='2' x:Name="ContentGrid">
        <Grid.Resources>
            <CommandBarFlyout x:ConnectionId='3' x:Name="FileCommandsFlyout">
                <AppBarButton x:ConnectionId='4' x:Name="FlyoutOpenButton" x:Uid="ContextMenuButtonOpen" Icon="OpenFile"                               />
                <AppBarButton x:ConnectionId='5' x:Name="FlyoutCopyButton" x:Uid="ContextMenuButtonCopy" Icon="Copy"                               />
                <AppBarButton x:ConnectionId='6' x:Name="FlyoutPinUnpinButton" x:Uid="ContextMenuButtonPin" Icon="Pin"                             />
                <AppBarButton x:ConnectionId='7' x:Name="FlyoutPreviewButton" x:Uid="ContextMenuButtonPreview" Icon="View"                                       />
                <CommandBarFlyout.SecondaryCommands>
                    <AppBarButton x:ConnectionId='8' x:Name="FlyoutRevealButton" x:Uid="ContextMenuButtonReveal" Icon="MoveToFolder"                                 />
                    <AppBarButton x:ConnectionId='9' x:Name="FlyoutSelectButton" x:Uid="ContextMenuButtonSelect" Icon="SelectAll"                                 />
                </CommandBarFlyout.SecondaryCommands>
            </CommandBarFlyout>
        </Grid.Resources>

        <ParallaxView x:ConnectionId='10' x:Name="ThemeBackgroundParallaxView" Source="{Binding ElementName=regularFileListView}" VerticalShift="500" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:ConnectionId='39' x:Name="ParallaxImage" HorizontalAlignment="Center" VerticalAlignment="Stretch" Stretch="UniformToFill" Opacity="0.25"/>
        </ParallaxView>

        <Rectangle x:ConnectionId='11' x:Name="TitleBarRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="30" Opacity="0"/>

        <Grid x:ConnectionId='12' x:Name="EverythingGrid" Translation="0,20,0" Opacity="0">
            <Grid.TranslationTransition>
                <Vector3Transition/>
            </Grid.TranslationTransition>
            <Grid.OpacityTransition>
                <ScalarTransition/>
            </Grid.OpacityTransition>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:ConnectionId='13' x:Name="HeaderGrid" Grid.Row="0">
                <Grid x:ConnectionId='31' x:Name="FlyoutStyleGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle x:ConnectionId='35' x:Name="DragZone" VerticalAlignment="Top" Height="1" Fill="Transparent"/>
                    <TextBlock x:ConnectionId='36' x:Name="FolderDisplay" 
                       Text="DropStack" 
                       FontSize="35" 
                       FontWeight="SemiBold" 
                       Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Margin="20,0,10,0" 
                       TextTrimming="CharacterEllipsis"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" Spacing="10">
                        <Rectangle Opacity="0" Height="75" Width="1"/>
                        <Button x:ConnectionId='37' x:Uid="SimpleModeLaunchNormalModeButton" x:Name="SimpleModeMeatballMenu"                                      Background="Transparent" BorderBrush="Transparent">
                            <FontIcon Glyph="&#xE8A7;"/>
                        </Button>
                        <Button x:ConnectionId='38' x:Uid="SimpleModeCloseWindowButton" x:Name="CloseSimpleModeButton"                                     Background="Transparent" BorderBrush="Transparent">
                            <FontIcon Glyph="&#xE8BB;"/>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid x:ConnectionId='32' x:Name="WindowStyleGrid" Visibility="Collapsed">
                    <Rectangle x:ConnectionId='33' x:Name="PlaceholderRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Opacity="0"/>
                    <TextBlock x:ConnectionId='34' x:Name="TitleBarText" HorizontalAlignment="Left" VerticalAlignment="Top" Text="DropStack" Margin="10,5,0,0"/>
                </Grid>
            </Grid>

            <Grid x:ConnectionId='14' x:Name="ToggleButtonStackPanel" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:ConnectionId='21' x:Uid="SimpleModeLaunchNormalModeButton" x:Name="AltLaunchNormalModeButton" Visibility="Collapsed" Grid.Column="0"                                         Height="36" CornerRadius="18" Margin="10,0,5,0">
                    <FontIcon Glyph="&#xE8A7;"/>
                </Button>
                <ScrollViewer HorizontalScrollMode="Enabled" Grid.Column="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Disabled">
                    <StackPanel x:ConnectionId='22' x:Name="FilterButtonsStackPanel" Orientation="Horizontal">
                        <ToggleButton x:ConnectionId='23' x:Uid="SimpleModeSortOptionAll" x:Name="AllFilesToggleButton"                                                                           Tag="all" Content="All" Height="36" FontSize="16" CornerRadius="18" Margin="20,0,0,0" IsChecked="True"                                               >
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number1"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                        <ToggleButton x:ConnectionId='24' x:Uid="SimpleModeSortOptionPins" x:Name="PinnedFilesToggleButton"                                                                           Tag="pins" Margin="10,0,0,0" Height="36" FontSize="16" CornerRadius="18"                                                   AllowDrop="True"                                                                                >
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number2"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                        <ToggleButton x:ConnectionId='25' x:Uid="SimpleModeSortOptionDocs"                                                                           Tag="docs" Margin="10,0,0,0" Height="36" FontSize="16" CornerRadius="18">
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number3"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                        <ToggleButton x:ConnectionId='26' x:Uid="SimpleModeSortOptionPics"                                                                           Tag="pics" Margin="10,0,0,0" Height="36" FontSize="16" CornerRadius="18">
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number4"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                        <ToggleButton x:ConnectionId='27' x:Uid="SimpleModeSortOptionMusic"                                                                           Tag="music" Margin="10,0,0,0" Height="36" FontSize="16" CornerRadius="18">
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number5"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                        <ToggleButton x:ConnectionId='28' x:Uid="SimpleModeSortOptionVideos"                                                                           Tag="vids" Margin="10,0,0,0" Height="36" FontSize="16" CornerRadius="18">
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number6"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                        <ToggleButton x:ConnectionId='29' x:Uid="SimpleModeSortOptionApps"                                                                           Tag="apps" Margin="10,0,0,0" Height="36" FontSize="16" CornerRadius="18">
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number7"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                        <ToggleButton x:ConnectionId='30' x:Uid="SimpleModeSortOptionPresentations"                                                                           Tag="pres" Height="36" FontSize="16" CornerRadius="18" Margin="10,0,20,0">
                            <ToggleButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="Number8"/>
                            </ToggleButton.KeyboardAccelerators>
                        </ToggleButton>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <ListView x:ConnectionId='15'   x:Name="regularFileListView"
                        Grid.Row="2"
                                                                         
                                                                       
                                                               
                        CanDragItems="True" 
                                                                          
                                                                                   
                        SelectionMode="Extended"
                                                                               
                                                                   
                                                           >
                <ListView.ItemContainerTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition  FromVerticalOffset="0" />
                    </TransitionCollection>
                </ListView.ItemContainerTransitions>
                <ListView.ItemTemplate>
                    <DataTemplate x:Name="FilesDataTemplate">
                        <Grid x:Name="regularFileInfoStackpanel" HorizontalAlignment="Stretch" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Image x:Name="Thumbnail" Source="{Binding FileIcon}" Opacity="{Binding IconOpacity}" Width="43" Height="43" Stretch="Uniform" Margin="-5,3,5,3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <ProgressRing IsActive="{Binding ProgressActivity}"/>
                            </Grid>
                            <Grid Grid.Column="1" HorizontalAlignment="Stretch" Tag="{Binding FilePath}" Opacity="{Binding TextOpacity}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding FileDisplayName}" FontSize="20" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,5,0,0"/>
                                <Grid Grid.Row="1" Margin="0,0,0,5" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="0,-3,2,3" Height="18" Width="Auto">
                                        <Rectangle Fill="DarkGray" Opacity="{Binding PillOpacity}" RadiusX="9" RadiusY="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,1,0,-1"/>
                                        <TextBlock Text="{Binding FileType}" Tag="{Binding TypeTag}" FontSize="13" Margin="7,0,7,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    </Grid>
                                    <Grid Grid.Column="1" Height="18" Margin="2,-3,0,3">
                                        <Rectangle Fill="DarkGray" Opacity="{Binding PillOpacity}" RadiusX="9" RadiusY="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,1,0,-1"/>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="7,0,7,0" Spacing="4">
                                            <TextBlock Text="{Binding FileSize}" FontSize="13" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding FileSizeSuffix}" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <TextBlock Grid.Column="2" Text="{Binding ModifiedDate}" Opacity="{Binding TextOpacityDate}" FontSize="13" HorizontalAlignment="Right" Margin="5,0,0,3" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                                <TextBlock x:Name="PathBlock" Text="{Binding FilePath}" Visibility="Collapsed"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TeachingTip x:ConnectionId='16' x:Name="SomethingWentWrongTeachingTip"
                         x:Uid="SimpleModeSomethingWentWrong"
                     PreferredPlacement="Center"
                     IsOpen="False"
                                                                      />
        </Grid>
    </Grid>
</winex:WindowEx>

